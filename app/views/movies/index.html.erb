<div class="container-fluid padding-top-5">
  <%= link_to 'New Movie', new_movie_path,class: 'btn btn-default btn-primary btn-lg pull-right margin-bottom-10'%>
  <div class="row">
    <div class="col-lg-12 col-md-8 col-sm-8 col-xs-12 pull-left padding-top-30">
      <div class="panel panel-info">
          <div class="panel-heading">
          <h2> Movies</h2>
          </div>
          <table class="table table-bordered table-striped table-hover" id="sortable">
            <thead class="thead-dark">
            <tr>
              <th class="text-center">
                Title
              </th>
              <th class="text-center">
                Year Of Release
              </th>
              <th class="text-center">
                Rating
              </th>
              <th class="text-center">
                Actions
              </th>
            </tr>
            </thead>
            <tbody>
            <%if @movies.present?%>
                <% @movies.each do |movie| %>
                    <tr class="item">
                      <td><%= movie.title %></td>
                      <td><%= movie.release_year %></td>
                      <td><%= movie.rating %></td>
                      <td class="pull-right"><%= link_to 'Edit', edit_movie_path(movie) , :class => 'btn btn-success' %>
                        <%= link_to 'Destroy', movie, :class => 'btn btn-danger ', method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                <% end %>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</div>
<br>


